{% extends '@Vis/base.html.twig' %}

{% do addAssetComposer('twbs/bootstrap/dist/css/bootstrap.min.css') %}
{% do addAssetComposer('twbs/bootstrap/dist/js/bootstrap.bundle.min.js') %}
{% do addAssetComposer('fortawesome/font-awesome/css/all.min.css') %}
{% do addAssetComposer('avalynx/avalynx-simpleadmin/dist/js/avalynx-simpleadmin.js') %}
{% do addAssetComposer('avalynx/avalynx-simpleadmin/dist/css/avalynx-simpleadmin.vars.css') %}
{% do addAssetComposer('avalynx/avalynx-simpleadmin/dist/css/avalynx-simpleadmin.css') %}
{% do addAssetComposer('avalynx/avalynx-simpleadmin/dist/css/avalynx-simpleadmin-sidenav.vars.css') %}
{% do addAssetComposer('avalynx/avalynx-simpleadmin/dist/css/avalynx-simpleadmin-sidenav.css') %}
{% do addAssetComposer('avalynx/avalynx-simpleadmin/dist/css/avalynx-simpleadmin-sidenav-sub1.vars.css') %}
{% do addAssetComposer('avalynx/avalynx-simpleadmin/dist/css/avalynx-simpleadmin-sidenav-sub1.css') %}
{% do addAssetComposer('avalynx/avalynx-simpleadmin/dist/css/custom/avalynx-simpleadmin-light.css') %}
{% do addAssetComposer('avalynx/avalynx-alert/dist/css/avalynx-alert.css') %}
{% do addAssetComposer('avalynx/avalynx-alert/dist/js/avalynx-alert.js') %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <header id="avalynx-simpleadmin-header" class="sticky-top d-flex border-bottom shadow">
        <div class="avalynx-simpleadmin-brand d-flex align-items-center justify-content-start" style="padding-left:16px;">
            <img src="{{ getAssetComposerFile('navigation.logo.default'|vistrans) }}" class="img-fluid avalynx-simpleadmin-navigation-logo avalynx-simpleadmin-lightmode-flex" style="max-height: 40px; height: auto;" title="{{ 'navigation.title.default'|vistrans }}" alt="{{ 'navigation.title.alt'|vistrans }}">
            <img src="{{ getAssetComposerFile('navigation.logo.dark'|vistrans) }}" class="img-fluid avalynx-simpleadmin-navigation-logo avalynx-simpleadmin-darkmode-flex d-none" style="max-height: 40px; height: auto;" title="{{ 'navigation.title.default'|vistrans }}" alt="{{ 'navigation.title.alt'|vistrans }}">
            <span class="ms-3">{{ 'navigation.title.sub'|vistrans }}</span>
        </div>

        {% for item in vis.topbar('start', vis.tool) %}

            {% if (item.template != '') %}
                {{ include(item.template) }}
            {% endif %}

        {% endfor %}

        <div class="flex-grow-1"></div>

        {% for item in vis.getTopbar('end', vis.getTool()) %}

            {% if (item.template != '') %}
                {{ include(item.template) }}
            {% endif %}

        {% endfor %}

    </header>
    <div id="avalynx-simpleadmin-main" class="d-flex">

        <div id="avalynx-simpleadmin-loader" class="position-absolute w-100 border-top">
            <div class="position-absolute top-50 start-50 translate-middle">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>

        <div id="avalynx-simpleadmin-sidenav" class="shadow{% if vis.sidebarClosed %} avalynx-simpleadmin-moved{% endif %}">

            <div id="avalynx-simpleadmin-sidenav-header" class="offcanvas-header avalynx-simpleadmin-brand d-flex align-items-center justify-content-start border-bottom p-0 m-0" style="padding-left:16px !important;">

                <img src="{{ getAssetComposerFile('navigation.logo.default'|vistrans) }}" class="img-fluid avalynx-simpleadmin-navigation-logo avalynx-simpleadmin-lightmode-flex" style="max-height: 40px; height: auto;" title="{{ 'navigation.title.default'|vistrans }}" alt="{{ 'navigation.title.alt'|vistrans }}">
                <img src="{{ getAssetComposerFile('navigation.logo.dark'|vistrans) }}" class="img-fluid avalynx-simpleadmin-navigation-logo avalynx-simpleadmin-darkmode-flex d-none" style="max-height: 40px; height: auto;" title="{{ 'navigation.title.default'|vistrans }}" alt="{{ 'navigation.title.alt'|vistrans }}">
                <span class="ms-3">{{ 'navigation.title.sub'|vistrans }}</span>

            </div>

            <div id="avalynx-simpleadmin-sidenav-body" class="p-0">

                <div class="p-2 pe-1">

                    <ul class="avalynx-simpleadmin-sidenav" id="avalynx-simpleadmin-sidenav-content">

                        {% for item in vis.getSidebar(vis.getTool()) %}

                            {% if (item.template != null) %}
                                {{ include(item.template) }}
                            {% endif %}

                        {% endfor %}


                    </ul>

                </div>

            </div>

        </div>

        <div id="avalynx-simpleadmin-container" class="flex-grow-1">

            {% block vis_container %}{% endblock %}
        </div>
    </div>

{% endblock %}
