{
  "name": "jbsnewmedia/vis-bundle",
  "type": "symfony-bundle",
  "license": "MIT",
  "description": "VIS Bundle",
  "authors": [
    {
      "name": "Juergen Schwind",
      "email": "info@juergen.schwind.de"
    }
  ],
  "require": {
    "php": ">=8.1",
    "avalynx/avalynx-simpleadmin": "^1.0",
    "fortawesome/font-awesome": "^6.0",
    "jbsnewmedia/avalynx-web-pack": "^1.0",
    "jbsnewmedia/symfony-web-pack": "^1.0",
    "symfony/framework-bundle": "^6.0|^7.0"
  },
  "autoload": {
    "psr-4": {
      "JBSNewMedia\\VisBundle\\": "src/"
    }
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.8",
    "symfony/yaml": "^7.1"
  },
  "config": {
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    },
    "sort-packages": true
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": false,
      "target-directory": "vendor-bin",
      "forward-command": true
    }
  },
  "scripts": {
    "bin-ecs-install": [
      "composer bin ecs install"
    ],
    "bin-ecs-update": [
      "composer bin ecs update"
    ],
    "bin-ecs": [
      "vendor-bin/ecs/vendor/bin/php-cs-fixer check --allow-risky=yes"
    ],
    "bin-ecs-fix": [
      "vendor-bin/ecs/vendor/bin/php-cs-fixer fix --allow-risky=yes"
    ],
    "bin-ecs-v": [
      "vendor-bin/ecs/vendor/bin/php-cs-fixer -V"
    ],
    "bin-phpstan-install": [
      "composer bin phpstan install"
    ],
    "bin-phpstan-update": [
      "composer bin phpstan update"
    ],
    "bin-phpstan": [
      "vendor-bin/phpstan/vendor/bin/phpstan analyse --configuration=phpstan.neon"
    ],
    "bin-phpstan-v": [
      "vendor-bin/phpstan/vendor/bin/phpstan -V"
    ],
    "bin-rector-install": [
      "composer bin rector install"
    ],
    "bin-rector-update": [
      "composer bin rector update"
    ],
    "bin-rector": [
      "vendor-bin/rector/vendor/bin/rector --dry-run"
    ],
    "bin-rector-process": [
      "vendor-bin/rector/vendor/bin/rector process"
    ],
    "bin-rector-v": [
      "vendor-bin/rector/vendor/bin/rector -V"
    ]
  }
}
